name: Dev and Staging Docker Build and Push

on:
  push:
    branches:
      - dev
      - staging

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Login to Docker Hub
        run: echo ${{ secrets.DOCKERHUB_TOKEN }} | docker login -u ${{ secrets.DOCKERHUB_USERNAME }} --password-stdin

      - name: Set Docker image name based on branch
        id: set-image-name
        run: |
          if [[ "${{ github.ref }}" == "refs/heads/dev" ]]; then
            echo "DOCKER_IMAGE_NAME=ghcr.io/bloomgamestudio/playerservice:dev" >> $GITHUB_ENV
          elif [[ "${{ github.ref }}" == "refs/heads/staging" ]]; then
            echo "DOCKER_IMAGE_NAME=ghcr.io/bloomgamesstudio/playerservice:staging" >> $GITHUB_ENV
          fi

      - name: Build and push Docker image
        env:
          DOCKER_IMAGE_TAG: latest 
        run: |
          docker build -t $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG .
          docker push $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG
